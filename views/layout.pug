    script(src='js/bootstrap.min.js', type='text/javascript')
    script(src='js/menumaker.js', type='text/javascript')
    script(src='js/navigation.js', type='text/javascript')
    script(type='text/javascript', src='js/jquery.isotope.min.js')
    script(type='text/javascript', src='js/owl.carousel.min.js')
    script(type='text/javascript', src='js/multiple-carousel.js')




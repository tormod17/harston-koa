  body
    block content
    .footer
      .container
        .row
          // about-us
          .col-lg-6.col-md-6.col-sm-6.col-xs-12
            .footer-widget
              div
                h3.footer-title #{company_name}
                p  #{company_aboutus}
                .ft-social
                  span
                    a.btn-social.btn-facebook(href='#')
                      i.fa.fa-facebook
                  span
                    a.btn-social.btn-twitter(href='#')
                      i.fa.fa-twitter
                  span
                    a.btn-social.btn-googleplus(href='#')
                      i.fa.fa-google-plus
                  span
                    a.btn-social.btn-linkedin(href='#')
                      i.fa.fa-linkedin
          // /.about us
          // footer-info
          .col-lg-3.col-md-3.col-sm-6.col-xs-12
            .footer-widget
              h3.footer-title Contact Info
              .info-widget
                .info-icon
                  i.fa.fa-map-marker
                .info-text
                  h4.info-title Office Address
                  p #{company_address}
              .info-widget
                .info-icon
                  i.fa.fa-phone
                .info-text
                  h4.info-title Phone Call
                  p
                    | #{company_phone}
              .info-widget
                .info-icon
                  i.fa.fa-envelope
                .info-text
                  h4.info-title Email Me
                  p #{company_email} 
          // /.footer-info
          // footer-useful links
          .col-lg-2.col-md-2.col-sm-6.col-xs-12
            .footer-widget
              h3.footer-title Quick Links
              ul.arrow.arrow-right
                li
                  a(href='/') Home
                li
                  a(href='/profile') Profile
                li
                  a(href='https://realla.co/organisations/8615/listings') Properties
                li
                  a(href='/news') News
                li
                  a(href='/') Services
          // /.footer-useful links
    // tiny-footer
    .tiny-footer
      .container
        .row
          .col-lg-12.col-md-12.col-sm-12.col-xs-12
            p.mute-text
              | Copyright Â© All Rights Reserved 2020 Template Design by
              a.copyrightlink(href='https://easetemplate.com/', target='_blank') EaseTemplate
      // /. tiny-footer
    // /.footer
